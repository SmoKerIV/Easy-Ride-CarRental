model Users {
  id       Int       @id @default (autoincrement())
  userName String    @unique
  password String
  email    String    @unique
  fullName String?
  role     UserRole
  myCars   Int[]
  booking  Booking[]
  cars     Cars[]
}

model Cars {
  id          Int          @id @default(autoincrement())
  userId      Int?
  brandId     Int?
  storeId     Int?
  name        String
  model       String
  year        Int
  seats       Int
  tank        Float
  fuel_type   String
  mileage     Float?
  available   Boolean
  plateNumber String
  image1      String
  image2      String?
  image3      String?
  image4      String?
  priceDay    Float
  priceWeek   Float?
  priceMonth  Float?
  numberDoors Int
  category    CarCategory
  condition   CarCondition
  dateCreated DateTime     @default(now())
  dateUpdated DateTime?    @updatedAt
  booking     Booking[]
  brand       Brands?      @relation(fields: [brandId], references: [brandId])
  store       Stores?      @relation(fields: [storeId], references: [id])
  user        Users?       @relation(fields: [userId], references: [id])
}

model Brands {
  brandId Int     @id @default(autoincrement())
  name    String
  image   String?
  cars    Cars[]
}

model Stores {
  id      Int     @id @default(autoincrement())
  name    String
  address String?
  cars    Cars[]
}

model Booking {
  id     Int   @id @default(autoincrement())
  userId Int
  carId  Int
  car    Cars @relation(fields: [carId], references: [id])
  user   Users @relation(fields: [userId], references: [id])
}

enum CarCondition {
  NEW
  GOOD
  OK
  BAD
}

enum CarCategory {
  SUV
  SEDAN
  SPORT
  PICKUP
  COUPE
}

enum UserRole {
  ADMIN
  USER
}
